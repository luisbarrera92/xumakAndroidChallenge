<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_character">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtVwCharacterName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.50"
            android:textAlignment="textStart"
            android:textAppearance="@android:style/TextAppearance.Small"
            android:layout_margin="5dp"></TextView>
        <Button
            android:id="@+id/btnCharacterDetails"
            android:text="@string/Details"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:textAlignment="center"
            android:textAppearance="@android:style/TextAppearance.Small"
            android:layout_margin="5dp"/>
        <Button
            android:id="@+id/btnCharacterLike"
            android:text="@string/Like"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:textAlignment="center"
            android:textAppearance="@android:style/TextAppearance.Small"
            android:layout_margin="5dp"
            />
        <Button
            android:id="@+id/btnCharacterUnlike"
            android:text="@string/UnLike"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:textAlignment="center"
            android:textAppearance="@android:style/TextAppearance.Small"
            android:layout_margin="5dp"
            android:visibility="gone"
            />
    </LinearLayout>
</LinearLayout>